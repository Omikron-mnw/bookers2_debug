<header class="navbar navbar-fixed-top navbar-inverse bg-dark navbar-dark navbar-expand-lg">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <%= link_to root_path do %>
      <span>Bookers</span>
      <% end %>
    </nav>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <nav>
      <ul class="nav navbar-nav navbar-right text-light">
        <% if user_signed_in? %>
          <li> <i class="fas fa-home text-light"></i> <%= link_to ' Home', user_path(current_user), class: 'glyphicon glyphicon-home home' %></li>
          <li> <i class="fas fa-users text-light"></i> <%= link_to ' Users', users_path, class: 'glyphicon glyphicon-user users' %></li>
          <li> <i class="fas fa-book-open text-light"></i> <%= link_to ' Books', books_path, class: 'glyphicon glyphicon-book books'%></li>
          <li> <i class="fas fa-sign-out-alt text-light"></i> <%= link_to ' logout', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %></li>
        <% else %>
          <li> <i class="fas fa-home text-light"></i> <%= link_to ' Home', root_path, class: 'glyphicon glyphicon-home home' %></li>
          <li> <i class="fas fa-link text-light"></i> <%= link_to ' About', about_path, class: 'glyphicon glyphicon-link about' %></li>
          <li> <i class="fas fa-user-plus text-light"></i><%= link_to ' sign up', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
          <li> <i class="fas fa-sign-in-alt"></i> <%= link_to ' login', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in'%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>